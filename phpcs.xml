<?xml version="1.0"?>
<ruleset name="StackPath-Wordpress-Plugin">
  <description>StackPath Wordpress Coding Standards</description>
  <rule ref="PSR12"/>

  <file>./src</file>
  <file>./templates</file>
  <file>./tests</file>
  <file>./stackpath.php</file>

  <!-- Template files are mostly markup and can have long lines -->
  <rule ref="Generic.Files.LineLength">
    <exclude-pattern>./templates</exclude-pattern>
  </rule>
</ruleset>
